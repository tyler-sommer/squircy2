{% extends 'layout.html.twig' %}

{% block content %}
<div class="row">
	<div class="col-sm-6">
		<h4>New Script</h4>
	</div>
	<div class="col-sm-6">
		<a class="btn btn-default btn-sm pull-right" href="https://squircy.com/resources/js-api.html" target="_blank">Documentation <i class="fa fa-external-link"></i></a>
	</div>
</div>
<form method="post" class="form form-horizontal" action="/script/create">
<div class="row">
	<div class="col-md-4">
  		<input class="form-control" name="title" required placeholder="Title">
	</div>
	<div class="col-md-4">
  		<select style="visibility: hidden" class="form-control" id="script_type" required name="type">
			<option>Javascript</option>
		</select>
	</div>
	<div class="col-md-4">
		<button class="form-control btn btn-primary">Create</button>
	</div>
</div>
<div class="row">
	<div class="col-md-12" style="height: 700px">
  		<div id="editor" style="width: 100%; height: 100%"></div>
		<input type="hidden" name="body" id="script_body">
	</div>
</div>
<div class="row">
	<div class="col-md-offset-8 col-md-4">
		<button class="form-control btn btn-primary">Create</button>
	</div>
</div>
</form>
{% endblock %}

{% block additional_javascripts %}
	{% include "script/_javascripts.html.twig" %}
{% endblock %}
